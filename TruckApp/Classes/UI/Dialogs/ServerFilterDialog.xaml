<ContentDialog
    x:Class="TruckersMPApp.Classes.UI.Dialogs.ServerFilterDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TruckersMPApp.Classes.UI.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Filter the servers"
    PrimaryButtonText="OK"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <Grid>
        <StackPanel>
            <RadioButton x:Name="ALL" Tag="" Content="All games" Checked="RadioButton_Checked" />
            <RadioButton x:Name="ETS2" Tag="ETS2" Content="Only ETS2 servers" Checked="RadioButton_Checked" />
            <RadioButton x:Name="ATS" Tag="ATS" Content="Only ATS servers" Checked="RadioButton_Checked" />
        </StackPanel>
    </Grid>
</ContentDialog>
